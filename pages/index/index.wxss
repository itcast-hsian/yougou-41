.search{
    background: #ff2d4a;
    padding: 20rpx;
}

.search-input{
    background: #fff;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4px;
    color: #999;
    font-size:14px;
}

.search-input icon{
    margin-right: 5px;
}


.swiper{
    height: 340rpx;
}

.swiper image{
    width: 750rpx;
    height: 340rpx;
}

.menus{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding:20rpx 0;
}

.menus image{
    width:128rpx;
    height:140rpx;
}

.floor{
    margin-bottom: 20px;
}

.floor-title{
    width:100%;
    height: 60rpx;
}

.floor-content{
    display: flex;
    justify-content: space-between;
    padding:15rpx;
}

.floor-content-left{
    margin-right: 12rpx;
}

.floor-content-left image{
    width: 232rpx;
    height: 386rpx;
}

.floor-content-right{
    flex: 1;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
} 


.floor-content-right image{
    width: 233rpx;
    height: 188rpx;
}

.floor + .floor .floor-content-right image{
    width: 193rpx;
}

.floor + .floor .floor-content-right image:nth-child(3n + 1){
    width: 273rpx;
}


.toTop{
    width:90rpx;
    height: 90rpx;
    border-radius: 50%;
    background: #eee;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 12px;
    position: fixed;
    right: 20rpx;
    bottom:50rpx;
}

.arrow{
    width:12px;
    height:12px;
    border-left: 1px #333 solid;
    border-top: 1px #333 solid;
    transform: rotate(45deg);
    position: relative;
    top: 10rpx;
}