<view class="container">
    <!-- 顶部搜索栏 -->
    <navigator url="">
        <view class="search">
            <view class="search-input">
                <icon type="search" size="20"/>
                小米
            </view>
        </view>
    </navigator>

    <!-- 中间tab栏的头部 -->
