<view class="container tab-page">
    <!-- 收货地址 -->
    <view class="address">
        <view class="address-info">
            <view>收货人：{{address.name}}</view>
            <view class="tel">{{address.tel}}</view>
        </view>

        <view class="address-detail">
            收货地址：{{address.detail}}
        </view>

        <image mode="aspectFill" src="../../images/cart_border@2x.png"></image>
    </view>

    <!-- 购物车商品列表的头部 -->
    <view class="goods-list-title">
        <view class="iconfont icon-dianpu"></view>
        优购生活馆
    </view>

    <!-- 商品列表 -->
    <view class="goods-list">
        <!-- 商品的单项, 需要循环的 -->
        <view 
        class="goods-item" 
        wx:for="{{goods}}" 
        wx:key="index" 
        wx:if="{{item.select}}">

            <navigator url="/pages/goods_detail/index?id={{item.goods_id}}">
                <image mode="aspectFill" src="{{item.goods_small_logo}}"></image>
            </navigator>

            <!-- 商品信息右侧 -->
            <view class="goods-item-right">
                <view class="goods-title">
                    {{item.goods_name}}
                </view>
                <view class="goods-info">
                    <view class="goods-price">
                        <text>￥</text>{{item.goods_price}}
                    </view>
                    <!-- 新增：数量显示 -->
                    <view>
                        数量*{{item.number}}
                    </view>
                </view>
            </view>
        </view>
    </view>
    
    <!-- 新增：合算 -->
    <view class="order-info">
        合算：￥{{allPrice}}
    </view>

    <!-- 新增：支付按钮 -->
    <button type="primary" class="pay-button" width="710">
        立即支付
    </button>
</view>