<view class="container">
    <!-- 搜索栏 -->
    <view class="search-wrapper">
        <view class="search">
            <view class="search-input">
                <icon type="search" size="20"/>
                <!-- bindinput类似于oninput，监听用户的输入事件 -->
                <input bindinput="handleInput" value="{{inputValue}}" placeholder="请输入您想要的商品"></input>
            </view>
            <view wx:if="{{inputValue}}" class="cancel-button" bindtap="handleCancel">取消</view>
            
            <!-- 搜索建议的列表 -->
            <!-- recommend.length是判断数组有值的时候才显示下拉列表 -->
            <view class="recommend" wx:if="{{recommend.length}}">

                <navigator url="" wx:for="{{recommend}}" wx:if="index">
                    {{item.goods_name}}
                </navigator>
            </view>
        </view>
    </view>

    <!-- 历史搜索 -->
    <view class="history-title">
        <view class="title-header">历史搜索</view>
        <icon type="clear" size="20"></icon>
    </view>

    <!-- 历史搜索列表 -->
    <view class="history-list">
        <view class="history-item">小米</view>
        <view class="history-item">小米123</view>
        <view class="history-item">小米4345345</view>
        <view class="history-item">小米123</view>
        <view class="history-item">小米4345345</view>
    </view>
</view>